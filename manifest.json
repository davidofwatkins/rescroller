{
  "name": "Rescroller",
  "version": "1.3",
  "manifest_version": 2,
  "description": "Decorate your scrollbars.",
  "icons": {
    "16": "appicons/icon16.png",
    "19": "appicons/icon19.png",
    "48": "appicons/icon38.png",
    "48": "appicons/icon48.png",
    "128": "appicons/icon128.png"
  },
  "options_page": "options.html",
  "browser_action": {
    "default_title": "Rescroller Settings",
    "default_icon": "appicons/icon19.png"
  },
  "background": {
    // @todo:david unfortunately we need all these in the background page in order to generate new CSS when a sync happens.
    // I wonder if it would be better to use requirejs and require them only when we need them?
    "scripts": ["js/jquery.js", "js/cssjson.js", "js/rescroller.js", "js/background.js"],
    "persistant": false // make this an event page - do not stay in memory when not in use
  },
  "permissions": [
    "<all_urls>",
    "storage",
    "tabs"
  ],
  "web_accessible_resources": [
    "images/defaults/up.png",
    "images/defaults/down.png",
    "images/defaults/left.png",
    "images/defaults/right.png"
  ]
}